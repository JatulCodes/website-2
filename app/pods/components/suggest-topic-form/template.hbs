<form class="form" {{action 'submit' on='submit'}}>
  <div class="modal-header">
    <button type="button" class="close"><span {{action 'cancel'}}>Ã—</span></button>
    <h4 class="modal-title">Suggest a topic<a class="anchorjs-link"><span class="anchorjs-icon"></span></a></h4>
  </div>

  <div class="modal-body">
    <div class="form-group">
      <label>Name</label>
      {{input value=formObject.name class="form-control"}}
    </div>

    <div class="form-group">
      <label>Email</label>
      {{input type="email" value=formObject.email class="form-control"}}
    </div>

    <div class="form-group">
      <label>Topic Suggestion</label>
      {{textarea value=formObject.suggestion class="form-control large"}}
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action 'cancel'}}>Close</button>
    <input type="submit" class="btn btn-primary" value={{if isPending 'Submitting...' 'Suggest Topic'}} disabled={{isPending}}>
  </div>
</form>
