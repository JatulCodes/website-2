<div class="col-md-6">
  <div class="form-group">
    <label>Time</label>
    {{bs-datetimepicker date=workshop.date format='MM/DD/YYYY - h:mmA'}}
  </div>

  <div class="form-group">
    <label>Title</label>
    {{input value=workshop.title class="form-control"}}
  </div>

  <div class="form-group">
    <label>Description</label>
    {{textarea value=workshop.description rows="10" class="form-control"}}
  </div>

  <div class="form-group">
    <label>URL</label>
    {{input value=workshop.url class="form-control"}}
  </div>

</div>
